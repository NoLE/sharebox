 <div class="container">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
   <h2 class="form-signin-heading">Sign up</h2>
      <div class="form-group">
             <div class="field">
              <%= f.label :name, class: "exampleInputText" %><br />
              <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Nombre" %>
            </div>

            <div class="field">
              <%= f.label :email, for: "exampleInputEmail1"  %><br />
              <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Correo Electronico" %>
            </div>

            <div class="field">
              <%= f.label :password, class: "exampleInputPassword1" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "exampleInputPassword1", placeholder: "ContraseÃ±a" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "exampleInputPassword1"  %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", id: "exampleInputPassword1", placeholder: "Repetir ContraseÃ±a"  %>
            </div>

            <div class="boton-formulario">
              <%= f.submit "Registrarse", class: "btn btn-primary" %>
            </div>
          <% end %>

          <%= render "devise/shared/links" %>
       </div>
</div>



